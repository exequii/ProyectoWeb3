@model Entidades.Entidades.Usuario

@{
    ViewData["Title"] = "Registro";
}

<div class="w-100 d-flex justify-content-start align-items-center shadow" id="fondo-registro">
    <div class="d-flex flex-column justify-content-around p-3 w-50 bg-white border-1 rounded" style="margin-left:5%;">
        <h1>Formulario de Registro</h1>
        <form action="/Usuario/Registrar" method="post">
            <div class="mb-3">
                Email
                <input type="email" class="form-control" name="Email" asp-for="Email">
                <span asp-validation-for="Email"></span>
            </div>
            <div class="mb-3">
                Contraseña
                <input type="password" class="form-control" name="Contraseña" asp-for="Contraseña">
                <span asp-validation-for="Contraseña"></span>
            </div>
            <input type="submit" class="btn btn-primary" value="Registrar"/>
        </form>
    </div>
</div>

<style>
    #fondo-registro{
        height:91vh;
        background-image: url("../images/fondo-index.jpg");
        background-size: cover;
        background-position: 50% 50%;
    }
</style>
